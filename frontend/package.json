{
  "name": "enterprise-pos-frontend",
  "version": "2.0.0", 
  "description": "Enterprise POS Frontend - React PWA",
  "type": "module",
  "keywords": [
    "react", "pwa", "pos", "frontend", "enterprise", "cloudflare-pages"
  ],
  "author": "namhbcf1",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "dev:https": "vite --host 0.0.0.0 --port 5173 --https",
    "dev:tunnel": "vite --host 0.0.0.0 --port 5173 --tunnel",
    
    "build": "vite build",
    "build:staging": "cross-env NODE_ENV=staging vite build",
    "build:production": "cross-env NODE_ENV=production vite build",
    "build:analyze": "cross-env ANALYZE=true vite build",
    
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "preview:https": "vite preview --host 0.0.0.0 --port 4173 --https",
    
    "deploy": "npm run build && wrangler pages deploy dist --project-name enterprise-pos-frontend",
    "deploy:staging": "npm run build:staging && wrangler pages deploy dist --project-name enterprise-pos-frontend-staging",
    "deploy:production": "npm run build:production && wrangler pages deploy dist --project-name enterprise-pos-frontend-prod",
    
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:deploy": "npm run storybook:build && wrangler pages deploy storybook-static --project-name enterprise-pos-storybook",
    
    "pwa:generate-icons": "pwa-asset-generator public/logo.svg public/icons --type png --background '#ffffff' --padding '10%'",
    "pwa:generate-manifest": "node scripts/generate-manifest.js",
    
    "lighthouse": "lighthouse http://localhost:5173 --output html --output-path ./reports/lighthouse.html",
    "lighthouse:ci": "lhci autorun",
    
    "clean": "rm -rf dist node_modules/.vite .eslintcache",
    "clean:cache": "rm -rf node_modules/.cache .vite",
    
    "update:deps": "npx npm-check-updates -u && npm install",
    "security:audit": "npm audit --audit-level moderate",
    
    "docs:components": "typedoc src/components --out docs/components",
    "docs:serve": "serve docs -l 3000"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    
    "antd": "^5.12.8",
    "@ant-design/icons": "^5.2.6",
    "@ant-design/colors": "^7.0.2",
    "@ant-design/charts": "^2.0.3",
    
    "recharts": "^2.8.0",
    "react-chartjs-2": "^5.2.0",
    "chart.js": "^4.4.1",
    
    "axios": "^1.6.5",
    "react-query": "^3.39.3",
    "@tanstack/react-query": "^5.17.1",
    
    "zustand": "^4.4.7",
    "jotai": "^2.6.0",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    
    "dayjs": "^1.11.10",
    "date-fns": "^3.0.6",
    "lodash-es": "^4.17.21",
    "ramda": "^0.29.1",
    
    "framer-motion": "^10.16.16",
    "react-spring": "^9.7.3",
    "lottie-react": "^2.4.0",
    
    "react-helmet-async": "^2.0.4",
    "react-hot-toast": "^2.4.1",
    "sonner": "^1.3.1",
    
    "workbox-window": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    
    "qr-scanner": "^1.4.2",
    "jsqr": "^1.4.0",
    "html5-qrcode": "^2.3.8",
    
    "idb": "^7.1.1",
    "dexie": "^3.2.4",
    
    "socket.io-client": "^4.7.4",
    "reconnecting-websocket": "^4.4.0",
    
    "crypto-js": "^4.2.0",
    "jose": "^5.2.0",
    
    "file-saver": "^2.0.5",
    "xlsx": "^0.18.5",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.6.0",
    
    "react-draggable": "^4.4.6",
    "react-resizable": "^3.0.5",
    "react-window": "^1.8.8",
    "react-virtualized-auto-sizer": "^1.0.20",
    
    "use-debounce": "^10.0.0",
    "use-local-storage-state": "^19.3.0",
    "react-use": "^17.4.2",
    
    "@heroicons/react": "^2.0.18",
    "lucide-react": "^0.303.0",
    "react-icons": "^4.12.0",
    
    "clsx": "^2.0.0",
    "classnames": "^2.3.2",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-windicss": "^1.9.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-mock": "^3.0.0",
    
    "wrangler": "^3.78.12",
    
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/lodash-es": "^4.17.12",
    "@types/file-saver": "^2.0.7",
    "@types/crypto-js": "^4.2.1",
    "typescript": "^5.3.3",
    
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    
    "vitest": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "@vitest/coverage-v8": "^1.1.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.1",
    "jsdom": "^23.2.0",
    
    "playwright": "^1.40.1",
    "@playwright/test": "^1.40.1",
    
    "storybook": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/addon-docs": "^7.6.7",
    "@storybook/addon-a11y": "^7.6.7",
    
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.12.0",
    
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "serve": "^14.2.1",
    "typedoc": "^0.25.7",
    
    "pwa-asset-generator": "^6.3.1",
    "sharp": "^0.33.2",
    
    "mock-service-worker": "^2.0.11",
    
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "react-hooks",
      "react-refresh",
      "@typescript-eslint",
      "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react-refresh/only-export-components": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "jsx-a11y/click-events-have-key-events": "warn",
      "jsx-a11y/no-static-element-interactions": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "plugins": ["prettier-plugin-tailwindcss"]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lighthouse": {
    "ci": {
      "collect": {
        "url": [
          "http://localhost:5173",
          "http://localhost:5173/admin",
          "http://localhost:5173/cashier",
          "http://localhost:5173/staff"
        ],
        "startServerCommand": "npm run preview",
        "numberOfRuns": 3
      },
      "assert": {
        "assertions": {
          "categories:performance": ["warn", {"minScore": 0.9}],
          "categories:accessibility": ["error", {"minScore": 0.9}],
          "categories:best-practices": ["warn", {"minScore": 0.9}],
          "categories:seo": ["warn", {"minScore": 0.9}],
          "categories:pwa": ["warn", {"minScore": 0.9}]
        }
      },
      "upload": {
        "target": "filesystem",
        "outputDir": "./reports/lighthouse-ci"
      }
    }
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css", 
      "maxSize": "100 kB",
      "compression": "gzip"
    }
  ]
}