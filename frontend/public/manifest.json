      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Home screen showing POS dashboard"
    },
    {
      "src": "/screenshots/mobile-pos.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile POS terminal interface"
    },
    {
      "src": "/screenshots/tablet-inventory.png",
      "sizes": "768x1024",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Inventory management on tablet"
    }
  ],

  "shortcuts": [
    {
      "name": "POS Terminal",
      "short_name": "POS",
      "description": "Open point of sale terminal",
      "url": "/pos",
      "icons": [
        {
          "src": "/icons/shortcut-pos.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventory",
      "short_name": "Inventory",
      "description": "Manage inventory and products",
      "url": "/inventory",
      "icons": [
        {
          "src": "/icons/shortcut-inventory.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "View sales reports and analytics",
      "url": "/reports",
      "icons": [
        {
          "src": "/icons/shortcut-reports.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Customers",
      "short_name": "CRM",
      "description": "Customer relationship management",
      "url": "/customers",
      "icons": [
        {
          "src": "/icons/shortcut-customers.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "categories": [
    "business",
    "productivity",
    "retail",
    "finance"
  ],

  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",

  "prefer_related_applications": false,

  "protocol_handlers": [
    {
      "protocol": "web+cfpos",
      "url": "/handler?protocol=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/csv", ".xlsx"]
        }
      ]
    }
  },

  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },

  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "handle_links": "preferred",

  "scope_extensions": [
    {
      "origin": "https://your-api.your-subdomain.workers.dev"
    }
  ],

  "id": "cloudflare-enterprise-pos",
  "features": [
    "offline",
    "background-sync",
    "push-notifications",
    "barcode-scanner",
    "payment-processing",
    "inventory-management",
    "customer-management",
    "reporting-analytics",
    "multi-user",
    "role-based-access",
    "real-time-sync"
  ],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.cloudflare.pos",
      "id": "com.cloudflare.pos"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/cloudflare-pos/id123456789",
      "id": "123456789"
    }
  ],

  "permissions": [
    "camera",
    "microphone",
    "geolocation",
    "notifications",
    "background-sync",
    "persistent-storage"
  ],

  "version": "1.0.0",
  "manifest_version": 3,

  "custom": {
    "cloudflare": {
      "edge_optimized": true,
      "workers_compatible": true,
      "d1_enabled": true,
      "kv_enabled": true,
      "r2_enabled": true,
      "ai_powered": true,
      "real_time": true,
      "offline_first": true
    },
    "features": {
      "pos_terminal": {
        "enabled": true,
        "offline_support": true,
        "barcode_scanning": true,
        "receipt_printing": true,
        "multiple_payment_methods": true
      },
      "inventory_management": {
        "enabled": true,
        "real_time_tracking": true,
        "low_stock_alerts": true,
        "ai_forecasting": true,
        "bulk_operations": true
      },
      "customer_management": {
        "enabled": true,
        "loyalty_program": true,
        "purchase_history": true,
        "segmentation": true
      },
      "staff_gamification": {
        "enabled": true,
        "achievements": true,
        "leaderboards": true,
        "challenges": true,
        "rewards": true
      },
      "analytics_reporting": {
        "enabled": true,
        "real_time_dashboard": true,
        "custom_reports": true,
        "ai_insights": true,
        "export_capabilities": true
      },
      "multi_location": {
        "enabled": false,
        "requires_upgrade": true
      },
      "advanced_permissions": {
        "enabled": true,
        "role_based_access": true,
        "audit_logs": true,
        "session_management": true
      }
    },
    "integrations": {
      "payment_gateways": [
        "stripe",
        "paypal",
        "square",
        "momo",
        "zalopay",
        "vnpay"
      ],
      "accounting_software": [
        "quickbooks",
        "xero",
        "sage"
      ],
      "shipping_providers": [
        "ups",
        "fedex",
        "dhl",
        "ghn",
        "viettel_post"
      ]
    },
    "compliance": {
      "gdpr_compliant": true,
      "ccpa_compliant": true,
      "pci_dss_ready": true,
      "data_encryption": true,
      "audit_logging": true
    },
    "performance": {
      "edge_caching": true,
      "cdn_optimized": true,
      "lazy_loading": true,
      "code_splitting": true,
      "compression": true
    },
    "accessibility": {
      "wcag_2_1_aa": true,
      "keyboard_navigation": true,
      "screen_reader_support": true,
      "high_contrast_mode": true,
      "font_scaling": true
    }
  }
}