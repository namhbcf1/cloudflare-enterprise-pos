{
  "name": "Cloudflare Enterprise POS",
  "short_name": "CF POS",
  "description": "100% FREE enterprise-grade Point of Sale system built on Cloudflare's edge platform",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#1890ff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "vi-VN",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
