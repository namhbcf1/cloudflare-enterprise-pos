{
  "name": "cloudflare-enterprise-pos",
  "version": "2.0.0",
  "description": "100% FREE enterprise-grade Point of Sale system built entirely on Cloudflare's edge platform with AI-powered features",
  "keywords": [
    "pos", "point-of-sale", "cloudflare", "workers", "edge-computing",
    "enterprise", "retail", "inventory", "ai", "pwa", "offline-first",
    "gamification", "crm", "analytics", "real-time"
  ],
  "author": {
    "name": "namhbcf1",
    "email": "namhbcf1@example.com",
    "url": "https://github.com/namhbcf1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/namhbcf1/cloudflare-enterprise-pos.git"
  },
  "bugs": {
    "url": "https://github.com/namhbcf1/cloudflare-enterprise-pos/issues"
  },
  "homepage": "https://github.com/namhbcf1/cloudflare-enterprise-pos#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "deploy:backend": "cd backend && npm run deploy",
    "deploy:frontend": "cd frontend && npm run deploy",
    
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed",
    "db:reset": "cd backend && npm run db:reset",
    
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:watch": "concurrently \"npm run test:backend -- --watch\" \"npm run test:frontend -- --watch\"",
    
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    
    "setup": "npm install && npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist",
    "clean:cache": "npm cache clean --force",
    
    "postinstall": "husky install",
    "prepare": "husky install",
    
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    
    "analytics": "cd backend && npm run analytics",
    "monitoring": "cd backend && npm run monitoring",
    
    "backup": "cd backend && npm run backup",
    "restore": "cd backend && npm run restore",
    
    "security:audit": "npm audit --recursive",
    "security:fix": "npm audit fix --recursive",
    
    "performance:test": "lighthouse-ci autorun",
    "performance:analyze": "npm run build && bundlesize"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "bundlesize": "^0.18.2",
    "lighthouse-ci": "^0.12.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "bundlesize": [
    {
      "path": "./frontend/dist/**/*.js",
      "maxSize": "250 kB",
      "compression": "gzip"
    },
    {
      "path": "./frontend/dist/**/*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/namhbcf1"
  },
  "config": {
    "cloudflare": {
      "zone_id": "YOUR_ZONE_ID",
      "account_id": "YOUR_ACCOUNT_ID"
    },
    "deployment": {
      "environment": "production",
      "auto_deploy": true,
      "health_check": true
    },
    "features": {
      "ai_enabled": true,
      "gamification": true,
      "real_time": true,
      "offline_mode": true,
      "analytics": true
    }
  },
  "private": false
}